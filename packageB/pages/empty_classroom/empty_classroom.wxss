.main {
  position: absolute;
  width: 100%;
  height: 100%;
  display: block;
  box-sizing: border-box;
  padding-top: 100rpx;
  top: 0;
}

.show {
  display: block;
  text-align: center;
}

.hidden {
  display: none;
  text-align: center;
}

.pricer {
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  background: #f1f1f1;
  border-radius: 12rpx;
  padding: 10rpx;
  font-size: 28rpx;
  border: 1rpx solid #8888;
  color: #888;
}

.button {
  background-color: rgb(17, 130, 175);
  color: #fff;
}

.header {
  margin: 2%;
  border: 1rpx solid #8888;
  border-radius: 20rpx;
  background: #fff;
  padding: 16rpx 26rpx;
}

.search {
  background: #f1f1f1;
  border-radius: 12rpx;
  padding: 10rpx;
  border: 1rpx solid #8888;
}

.search input {
  font-size: 28rpx;
  color: #a1a1a1;
  width: 100%;
  height: 100%;
}

.none {
  text-align: center;
  color: 32rpx;
  color: #a1a1a1;
}

.collect_main .goods_item {
  margin: 2%;
  border-radius: 20rpx;
  padding: 10rpx;
  display: flex;
  border-bottom: 2rpx solid #ccc;
  background-color: #fff;
}

.collect_main .goods_item .goods_img_wrap {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}

.collect_main .goods_item .goods_img_wrap .goods_imags {
  border-radius: 10rpx;
  width: 70%;
}

.collect_main .goods_item .goods-info_wrap {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.collect_main .goods_item .goods-info_wrap .goods_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.collect_main .goods_item .goods-info_wrap .goods_textarea {
  font-size: 28rpx;
  color: #888;
}

.collect_main .goods_item .goods-info_wrap .goods_pruce {
  color: #eb4450;
  font-size: 32rpx;
}


.list {
  margin: 2%;
  height: 80rpx;
  padding: 20rpx;
  /* background-color: rgb(236, 248, 236); */
  background-color: #fff;
  border-bottom: 1px solid #8888;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  border-radius: 20rpx;
}

