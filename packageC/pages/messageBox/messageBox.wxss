page{
  display: flex;
  align-items: center;
  justify-content: center;
}

.messageBox{
  margin-top: 300rpx;
  margin: 4%;
  width: 92%;
  border-radius: 20rpx;
  height: 600rpx;
  background-color: #fff;
  background: linear-gradient(-135deg, transparent 1.414em, rgb(241, 226, 193) 0);
}

.box{
  width: 82.5%;
  margin-left: -10rpx;
  background: rgb(162, 170, 85); /* Fallback */
  background:
  linear-gradient(to left bottom, transparent 50%, rgba(0, 0, 0, .4) 0) 100% 0/ 2em 2em no-repeat;
  background-size: 2em 2em, auto;
  padding: 2em;
  font: 100%/1.6 Baskerville, Palatino, serif;
}

.textarea{
  margin: 4%;
  width: 88%;
  height: 400rpx;
  padding: 20rpx;
  background-color: #fff;
}

/* 管理端 */
.stuList{
  width: 92%;
  margin-right: 2%;
  margin-left: 2%;
  margin-top: 2%;
  display: flex;
  flex-direction: row;
  text-align: center;
  align-items: center;
  background-color: #fff;
  padding: 15rpx;
  border-radius: 50rpx;
}

.stuList image{
  width: 15%;
  height: 60rpx;
  border-radius: 100%;
  background-color: khaki;
  overflow: hidden;
  margin-right: 20rpx;
}

.textareaText{
  text-align: left;
  width: 85%;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

/* 蒙版 */
.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 9000;
  opacity: 0.7;
}

.buttonBox{
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  justify-content: flex-end;
}

.modalDlg {
  width: 580rpx;
  height: 600rpx;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  margin: -370rpx 85rpx;
  background-color: #fff;
  border-radius: 36rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.close_mask {
  color: #fff;
  padding: 10rpx;
  margin-top: 20rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 100%;
  position: relative;
  left: 39%;
  font-size: 45rpx;
  background-color: #0278AE;
  text-align: center;
  line-height: 31rpx;
}


.mbox{
  margin-top: 20rpx;
  margin-left: -20rpx;
  width: 90%;
  display: flex;
  flex-direction: row;
}

.mbox1{
  width: 100%;
  padding-bottom: 10rpx;
  /* border-bottom:2rpx dashed rgb(199, 235, 255); */
}

.reduce{
  width: 100rpx;
  padding: 10rpx;
  border-radius: 40rpx;
  background-color: #FE642E;
  color: #fff;
  text-align: center;
  margin-left: 220rpx;
  margin-right: -90rpx;
}
/*弹窗结束 */

