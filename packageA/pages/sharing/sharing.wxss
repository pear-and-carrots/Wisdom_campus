/* 1.顶部导航 */
.gongxiang {
    display: flex;
    background-color: #fff;
}

.gongxiang_top {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 64rpx;
    background-color: rgba(218, 216, 216, 0.533);
    border-radius: 18rpx;
    margin: 16rpx;
}

/* 2.文件列表 */
.word {
    margin: 2%;
    padding: 15rpx;
    border-bottom: 1rpx solid rgba(78, 172, 226, 0.533);
    border-radius: 20rpx;
    background-color: #fff;
    display: flex;
}

.word_nic {
    font-weight: 550;
    margin-bottom: 20rpx;
}

.word_img {
    width: 20%;
    margin-right: 25rpx;
    width: 100rpx;
    height: 100rpx;
    border-radius: 100%;
    border: solid 2rpx #fff;
}

.word_name {
    font-size: 28rpx;
    line-height: 40rpx;
}

.word_text {
    width: 50%;
}

.word_date {
    width: 30%;
    color: #888;
    font-size: 25rpx;
}

/* 3.上传文件 */
.input {
    margin: 2%;
    padding: 10rpx;
    border: 1px solid #8888;
    border-radius: 20rpx;
}


.shangchuan {
    display: flex;
    justify-content: center;
}

.bkuang {
    height: 200rpx;
    width: 200rpx;
    font-size: 200rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 20rpx;
    border: 5rpx solid #888;
    border-radius: 20rpx;
    color: rgb(83, 76, 76);
    background-color: rgb(236, 239, 240);
    padding-bottom: 20rpx;
}



.default {
    margin-top: 40rpx;
    background-color: #0278ae;
    color: #fff;
}

.share {
    background-color: #fff;
    margin: 2%;
    border-radius: 20rpx;
    padding: 20rpx;
    box-shadow: 5rpx 5rpx 5rpx 5rpx rgba(199, 235, 255, 0.533);
}

.bBox{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.bImg{
    width: 220rpx;
    height: 220rpx;
}