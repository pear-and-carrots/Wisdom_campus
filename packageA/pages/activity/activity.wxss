.biaoti {
  width: 100%;
  padding: 2%;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 150rpx;
}

.tiaozuang {
  position: fixed;
  left: 2%;
}

page {
  padding: 4%;
  width: 92%;
}

.list {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
}

.item {
  background-color: #fff;
  padding-bottom: 18rpx;
  border-bottom: 1rpx solid #cccc;
  position: relative;
  margin-bottom: 20rpx;
  padding: 20rpx;
  border-radius: 20rpx;
}

.title {
  font-size: 30rpx;
  font-weight: 550;
  color: #1a1a1a;
  margin-bottom: 18rpx;
  height: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.item-wrapper {
  display: flex;
}

.img image {
  width: 210rpx;
  height: 140rpx;
}

.info {
  color: #777;
  font-size: 26rpx;
  padding-left: 20rpx;
  height: 70rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.read-num {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  font-size: 24rpx;
  color: #4d4d4d;
}

.date {
  font-size: 24rpx;
  color: #888;
  position: absolute;
  right: 40%;
  bottom: 8%;
}

.read-num text {
  color: #4d4d4d;
  margin-right: 4rpx;
}

.glinput {
  color: #666666;
  background-color: #fff;
  padding: 20rpx;
  box-shadow: 2rpx 5rpx 5rpx 4rpx #d2f0fc;
  border-radius: 15rpx;
  margin: 2%;
}

.title1 {
  font-size: 42rpx;
  font-weight: 700;
  margin-bottom: 40rpx;
  text-align: center;
  color: rgb(58, 81, 114);
}