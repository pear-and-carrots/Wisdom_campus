/* 添加内容 */

.add_con>text {
  height: 40rpx;
  width: 40rpx;
  font-size: 40rpx;
  display: block;
  margin-right: 20rpx;
  line-height: 44rpx;
  font-weight: 700;
  color: #fff;
  background-color: crimson;
  border-radius: 100%;
  text-align: center;
  line-height: 35rpx;
}

.add_con>view {
  font-size: 32rpx;
  color: #7885cb;
}

/* 删除内容 */

.del {
  width: 40rpx;
  height: 40rpx;
  font-size: 32rpx;
  color: #fff;
  background-color: crimson;
  margin-right: 14rpx;
  border-radius: 100%;
  text-align: center;
  line-height: 35rpx;
  font-size: 45rpx;
  font-weight: 700;
}

input {
  flex-grow: 1;
  font-size: 28rpx;
  color: #808080;
}

.btn {
  margin-top: 120rpx;
}

.area_cell{
  text-align: center;
  width: 5%;
  margin: 10rpx;
  background-color: #f1fbff;
  /* background-color: rgb(255, 250, 235); */
  padding: 10rpx;
  border: 1rpx solid #8888;
  border-radius: 10rpx;
}

.area {
  padding: 2%;
  display: flex;
  flex-direction: row;
  background-color: #fff;
  margin-top: 40rpx;
  margin-right: 2%;
  margin-left: 2%;
  border-radius: 20rpx;
  /* box-shadow: 2rpx 2rpx 2rpx 2rpx #8888; */
}