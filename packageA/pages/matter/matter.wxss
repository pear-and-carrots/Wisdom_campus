/* miniprogram/pages/testSAS/testSAS.wxss */
page {
  /* background: #fcbe3960; */
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

/* 计时器 */
.progress_text{
  margin-right: 20rpx;
  line-height: 60rpx;
  font-size:35rpx;
  text-align: right;
}

/* 标题 */
.detial {
  font-size: 45rpx;
  font-weight: 700;
  text-align: center;
  margin-top: 20rpx;
  color: #000;
}

.sheet {
  background: #fff;
  border-radius: 20rpx;
  margin-top: 40rpx;
  margin-left: 2%;
  margin-right: 2%;
  width: 96%;
  height: 800rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  /* box-shadow: 2rpx 2rpx 2rpx 2rpx #8888; */
}

.naire {
  height: 620rpx;
}

.textarea {
  width: 90%;
  margin-left: 3%;
  margin-right: 3%;
  margin-top: -60rpx;
  padding: 15rpx;
  border: 1rpx solid #8888;
  border-radius: 20rpx;
}

.question {
  font-size: 36rpx;
  font-weight: bold;
  margin-top: 40rpx;
  margin-left: 32rpx;
}

.border {
  height: 2rpx;
  width: 90%;
  background-color: #d4d4d4;
  margin: 16rpx auto;
}

.radio-group {
  display: flex;
  flex-direction: column;
  font-size: 30rpx;
  text-indent: 14rpx;
  margin-top: 40rpx;
}

.radio {
  margin-bottom: 14rpx;
}

.button-group {
  display: flex;
  flex-direction: row;
  width: 80%;
  margin: auto;
  justify-content: space-between;
}

.button {
  background: #fcbe39;
  border-radius: 100rpx;
  font-size: 30rpx;
  /* line-height: 52rpx; */
  /* text-align: center; */
  height: 70rpx;
  width: 70rpx;
  color: #fff;
}

.button::after {
  border: 0;
}

.id {
  text-align: center;
  font-size: 24rpx;
  color: #c2c2c2;
  margin: auto;
  margin-top: 20rpx;
}

/* 管理端上传 */
.shangchuan {
  position: relative;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  /* height: 600rpx; */
  margin-top: 30rpx;
  background-color: #fff;
  margin-left: 2%;
  margin-right: 2%;
}

.pricer {
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  background: #f1f1f1;
  border-radius: 12rpx;
  padding: 10rpx;
  border: 1rpx solid #8888;
  color: #888;
}

.input {
  background-color: #f5fdf1;
  margin-top: 10rpx;
  padding: 10rpx;
  border-radius: 12rpx;
  border: 1rpx solid #8888;
}

.slider {
  width: 94%;
  margin-top: 10rpx;
  margin-right: 40rpx auto;
  margin-left: 40rpx auto;
  background-color: #f1f1f1;
  padding: 20rpx;
  border-radius: 15rpx;
  border: 1rpx solid #8888;
}

.selectTrue {
  /* height: 70rpx;
  width: 70rpx;
  margin-left: 86%; */
  margin-left: 83%;
  font-size: 25rpx;
  font-weight: 550;
}

.flex-x {
  display: flex;
  align-items: center;
}

.template_title,
.template_title1,
.template_title_list {
  height: 90rpx;
  background: #fff;
  justify-content: space-between;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.template_title1 {
  background: none;
}

.template_title_list {
  margin-bottom: 4rpx;
}

.template_title>view,
.template_title1>view {
  font-size: 32rpx;
  color: #8f8f8f;
  flex-shrink: 0;
  margin-right: 20rpx;
}

.template_title>input {
  font-size: 28rpx;
  color: #808080;
  text-align: right;
  flex-grow: 1;
}

.selectBox {
  margin: 12rpx;
  /* width: 55rpx;
  height: 55rpx;
  border-radius: 10rpx;
  border: 1rpx solid #888; */

}

